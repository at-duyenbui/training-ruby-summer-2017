<section class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header"><i class="fa fa-table"></i> List books</h3>
    </div>
  </div>
  <div class="row">
      <div class="col-lg-12">
          <section class="panel">
            <header class="panel-heading">
              List
            </header>
            <table class="table table-striped table-advance table-hover">
            <tbody>
              <tr>
                 <th>Book's Name</th>
                 <th>Author</th>
                 <th>Price</th>
                 <th>Image</th>
                 <th>Action</th>
              </tr>
              <%@books.each do |book| %>
              <tr>
                <td><%= book['bookname'] %></td>
                <td><%= book['author'] %></td>
                <td><%= book['price'] %></td>
                <td><%= image_tag book.image.thumb.url %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "Detail", book_path(book) %> |
                    <%= link_to "Edit", edit_book_path(book) %> |
                    <%= link_to "Delete", book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %>
                  </div>
                </td>
                
              </tr>
              <%end%>
            </tbody>
            </table>
            <p><%= link_to "Add new book", new_book_path %></p>
          </section>
      </div>
  </div>
</section>